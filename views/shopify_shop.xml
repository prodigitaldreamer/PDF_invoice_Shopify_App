<odoo>
    <data>
        <record id='shopify_order_printer_shop_action' model='ir.actions.act_window'>
            <field name="name">Shopify Order Printer</field>
            <field name="res_model">shopify.pdf.shop</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="shopify_shop_view_form" model="ir.ui.view">
            <field name="name">Shopify Shop</field>
            <field name="model">shopify.pdf.shop</field>
            <field name="arch" type="xml">
                <form create='false'>
                    <sheet>
                        <button name="get_data" string="Get Data" type="object" class="btn-primary"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="timezone"/>
                                <field name="email"/>
                                <field name="country"/>
                                <field name="install"/>
                                <field name="rating"/>
                                <field name="review"/>
                                <field name="currency_format"/>
                                <field name="force_update_scope"/>
                            </group>
                            <group>
                                <field name="shop_address"/>
                                <field name="shop_company_name"/>
                                <field name="shop_vat"/>
                                <field name="shop_zip"/>
                                <field name="shop_phone"/>
                                <field name="shop_email"/>
                                <field name="allow_frontend"/>
                                <field name="is_allow_frontend"/>
                                <field name="is_open_template_setting"/>
                                <field name="is_open_setup_info"/>
                                <field name="default_template"/>
                                <field name="scrip_tag_id"/>
                                <field name="front_button_label"/>
                                <field name="invoice_start_number"/>
                            </group>
                        </group>
                        <group>
                            <field name="templates">
                                <tree>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="default"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="shopify_shop_view__template_form" model="ir.ui.view">
            <field name="name">Shopify Template</field>
            <field name="model">shopify.pdf.shop.template</field>
            <field name="arch" type="xml">
                <form create='false'>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type"/>
                            </group>
                            <group>

                                <field name="page_size"/>
                                <field name="orientation"/>
                                <field name="top_margin"/>
                                <field name="bottom_margin"/>
                                <field name="left_margin"/>
                                <field name="right_margin"/>
                                <field name="default"/>
                                <field name="available"/>
                                <field name="virtual_rec"/>
                            </group>
                        </group>
                        <group>
                            <field name="html"/>
                            <field name="json"/>
                        </group>
                        <group>
                            <field name="clipboard"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="shopify_shop_search" model="ir.ui.view">
            <field name="name">Shop Search</field>
            <field name="model">shopify.pdf.shop</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Uninstall" domain="[('token', '=', False)]" name="uninstall"/>
                    <filter string="Install" domain="[('install', '=', True)]" name="install"/>
                </search>
            </field>
        </record>
        <menuitem name="Shopify Order Printer" id="order_printer_menu"/>
        <menuitem id="shopify_shop" name="Shopify Shop" parent="order_printer_menu" sequence="1" action="shopify_order_printer_shop_action"/>

        <record id="shopify_pdf_invoice_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_pdf_form_shopify"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'shopify_order_printer'}</field>
        </record>
        <menuitem name="Settings"
                  id="shopify_pdf_invoice_setting_menu"
                  parent="order_printer_menu"
                  action="shopify_pdf_invoice_config_settings_action"
                  sequence="50"/>

        <record id="shopify_shop_view__template_default_form" model="ir.ui.view">
            <field name="name">Shopify Template Default</field>
            <field name="model">shopify.pdf.template.default</field>
            <field name="arch" type="xml">
                <form create='false'>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="html"/>
                                <field name="json"/>
                                <field name="type"/>
                                <field name="default"/>
                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="shopify_pdf_shop_template_default_tree" model="ir.ui.view">
            <field name="name">Shopify Template Default</field>
            <field name="model">shopify.pdf.template.default</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="order_printer_template_default_act" model="ir.actions.act_window">
            <field name="name">Shopify Template Default</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shopify.pdf.template.default</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="order_printer_template_default" name="Template Default" parent="order_printer_menu" sequence="18" action="order_printer_template_default_act"/>

    </data>
</odoo>