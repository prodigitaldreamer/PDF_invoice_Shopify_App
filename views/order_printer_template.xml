<odoo>
    <data>
        <template id="redirect" name="Shopify URL Redirect">
            <script>
                window.top.location.href = '<t t-raw="url"/>';
            </script>
        </template>
        <template id="main" name="Shopify URL Redirect">
            <head>
                <title>Drag and Drop PDF Invoice</title>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <!-- Global site tag (gtag.js) - Google Analytics -->
                <script src="https://www.googletagmanager.com/gtag/js?id=G-C85BNFY4F4"></script>
                <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());

                    gtag('config', 'G-C85BNFY4F4');
                </script>
               <link rel="stylesheet" href="/shopify_order_printer/static/css/polaris-style.css"/>
               <link rel="stylesheet" href="/shopify_order_printer/static/css/polaris-style-custom.css"/>
               <meta name="shopify-api-key" t-att-content="api_key"/>
                <script src="https://cdn.shopify.com/shopifycloud/app-bridge.js"></script>
                <script type="text/javascript">window.$crisp=[];window.CRISP_WEBSITE_ID="82729ae0-f881-463d-ad79-c1ade8a0056e";(function(){d=document;s=d.createElement("script");s.src="https://client.crisp.chat/l.js";s.async=1;d.getElementsByTagName("head")[0].appendChild(s);})();</script>
            </head>
            <body>
                <div id="root"></div>
                <script>
                    window.config =
                    <t t-raw="config"/>
                </script>

                <t t-call-assets="shopify_order_printer.pdf_js_package_assets"/>
            </body>
        </template>

        <template id="error" name="Shopify URL Error">
            <head>
                <t t-call-assets="web.assets_common"/>
                <title>Shopify URL Error</title>
                <link rel="stylesheet" href="/web/static/lib/bootstrap/dist/css/bootstrap.css"/>
            </head>
            <body>
                <div class="card mx-auto mt-5" style="width: 768px">
                    <div class="card-header">
                        Error
                    </div>
                    <div class="card-body">
                        <span class="message">Error. Please refresh your browser! If the problem persists, please
                            contact the administrator
                        </span>

                    </div>
                </div>
            </body>
        </template>
        <template id="404_not_found" name="Shopify PDF Not Found">
            <head>
                <t t-call-assets="web.assets_common"/>
                <title>Shopify PDF Not Found</title>
            </head>
            <body>
                <div class="card mx-auto mt-5 border-0" style="max-width: 900px">
                    <div class="card-body">
                        <div class="alert alert-danger text-center" role="alert">
                            Page error, some element can not load or Session expired.Ensure your template is format-well
                            with PDF display.
                            Try load your template again or contact the administrator for
                            support !
                        </div>
                    </div>
                </div>
            </body>
        </template>

        <template id="pdf_preview" name="Shopify PDF Preview">
            <head>
                <title>Shopify PDF Previews</title>
                <link rel="stylesheet" href="/shopify_order_printer/static/css/polaris-style.css"/>
                <meta name="shopify-api-key" content="ef9f16539e1c37d5d51e70ed634cfbf7"/>
                <script src="https://cdn.shopify.com/shopifycloud/app-bridge.js"></script>
            </head>
            <body>
                <div id="pdf_invoice_preview"></div>
                <script>
                    window.config = {
                    "page":'<t t-out="page"/>',
                    "info":<t t-out="info"/>,
                    "templates":<t t-out="templates"/>,
                    "mode":'<t t-out="mode"/>',
                    "all_templates":<t t-out="all_templates"/>,
                    "template_info":<t t-out="template_info"/>,
                    "shop": '<t t-out="shop_url"/>',
                    "preview":<t t-out="preview"/>,
                    "timeout":<t t-out="timeout"/>,
                    "api_key":'<t t-out="api_key"/>',
                    "shop_url":'<t t-out="shop_url"/>',
                    }
                </script>
                <t t-call-assets="shopify_order_printer.pdf_js_package_assets"/>
            </body>
        </template>

        <template id="empty_state" name="Shopify PDF Empty">
            <head>
                <t t-call-assets="web.assets_common"/>
                <title>Drag and Drop PDF Invoice</title>
            </head>
            <body>
                <div class="container-fluid">
                    <div class="row content">
                        <div class="col-md-12">
                            <div class="card border-0">
                                <div style="margin: 50 auto; text-align:center;">
                                    <div class="ns-title-empty" style="margin: 20;">
                                        <span style="font-family: sans-serif;">Preview not available</span>
                                    </div>
                                    <div class="ns-subtext-empty" style="margin-bottom: 20;     font-weight: 400; font-size: 14px; color: #6D7175;">
                                        <span style="font-family: sans-serif;">Looks like your order does not have data to show on this template</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </body>
        </template>

        <template id="empty_order" name="Shopify Order Empty">
            <head>
                <t t-call-assets="web.assets_common"/>
                <title>Shopify Order Empty</title>
            </head>
            <body>
                <div class="container-fluid">
                    <div class="row content">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8">
                            <div class="card border-0" style="margin: 10% 0; box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.05), 0px 1px 2px rgba(0, 0, 0, 0.15); border-radius: 8px;">
                                <div style="margin: 50px auto; text-align:center;">
                                    <div class="ns-image-empty" style="margin: 40px auto;">
                                        <img src="/shopify_order_printer/static/img/order.png" alt="Empty Order" style="max-width: 100%; height: auto;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>
                </div>
            </body>
        </template>
    </data>
</odoo>