<odoo>
    <data>
        <template id="mail" name="Shopify PDF Invoice Mail body">
            <html>
                <head>
                    <style>
                        @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600&amp;display=swap");
                        .mgn-email * {
                        font-family: 'Inter' !important;
                        }
                        .mgn-email {
                        font-family: 'Inter';
                        font-weight: 400;
                        padding: 25px 50px;
                        border-spacing: 0;
                        color: #585858;
                        width: 100%;
                        max-width: 742px;
                        margin: 0 auto;
                        text-align: left;
                        }

                        .mgn-email table {
                        border-spacing: 0;
                        width: 100%;
                        }

                        .mgn-email strong {
                        font-weight: 600;
                        }

                        .mgn-email_header .email_title {
                        padding-bottom: 10px;
                        }

                        .mgn-email_header .email_title strong {
                        font-size: 36px;
                        color: #000000;
                        }

                        .mgn-email_header .greet-message {
                        padding: 0 0 20px;
                        font-size: 19px;
                        }

                        .mgn-email_content {
                        font-size: 19px;
                        }

                        .mgn-email_content .action-goto td {
                        padding-bottom: 65px;
                        }

                        .mgn-email_content .action-goto a {
                        font-size: 14px;
                        padding: 10px;
                        width: 127px;
                        display: inline-block;
                        text-align: center;
                        text-decoration: none;
                        border: 2px solid #006ACC;
                        border-radius: 4px;
                        }

                        .mgn-email_content .action-goto span {
                        font-size: 19px;
                        padding: 5px;
                        color: #000000;
                        }

                        .mgn-email_content .action-goto_order {
                        background-color: #006ACC;
                        color: #ffffff !important;
                        }

                        .mgn-email_content .action-goto_store {
                        color: #006ACC;
                        }

                        .mgn-email_content .order-info {
                        width: 100%;
                        border-bottom: 1px solid #EDEFF2;
                        margin-bottom: 25px;
                        }

                        .mgn-email_content .order-info td {
                        padding: 10px;
                        }

                        .mgn-email_content .order-info td.col-product img {
                        width: 107px;
                        height: 72px;
                        object-fit: scale-down;
                        border-radius: 10px;
                        background-color: #EDEFF2;
                        margin-right: 30px;
                        }

                        .mgn-email_content .order-info td.col-product span {
                        vertical-align: top;
                        }

                        .mgn-email_content .order-info td.col-price {
                        text-align: center;
                        }

                        .mgn-email_content .order-info td.col-qty span {
                        padding: 0 35px;
                        }

                        .mgn-email_content .order-info thead td,
                        .mgn-email_content .order-info tbody td {
                        border-bottom: 1px solid #EDEFF2;
                        }

                        .mgn-email_content .order-info tfoot td {
                        padding: 0 10px 10px;
                        }

                        .mgn-email_content .order-info tfoot .row-subtotal td {
                        padding-top: 20px;
                        }

                        .mgn-email_content .order-info tfoot .row-total {
                        color: #000000;
                        }

                        .mgn-email_content .order-info tfoot .row-total td {
                        padding: 10px 10px 20px;
                        }

                        .mgn-email_content .order-info tfoot .row-total .col-total,
                        .mgn-email_content .order-info tfoot .row-total .col-price {
                        border-top: 1px solid #EDEFF2;
                        }

                        .mgn-email_footer .row-title {
                        font-size: 19px;
                        color: #000000;
                        }

                        .mgn-email_footer .row-content {
                        font-size: 17px;
                        }

                        .mgn-email_footer .row-content .title {
                        padding: 27px 0 8px;
                        }
                    </style>
                </head>
                <body>
                    <table class="mgn-email">
                        <thead class="mgn-email_header">
                            <tr>
                                <td class="email_title">
                                    <strong><t t-esc="shop_name"/> - Order <t t-raw="order_name"/></strong>
                                </td>
                            </tr>
                            <tr>
                                <td class="greet-message">
                                    <pre><t t-esc="custom_message"/></pre>
                                </td>
                            </tr>
                        </thead>
                        <tbody class="mgn-email_content">
                            <tr class="action-goto">
                                <td>
                                    <a t-att-href="order_status_url" class="action-goto_order">View order</a>
                                    <span>or</span>
                                    <a t-att-href="store_url" class="action-goto_store">View store</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table class="order-info">
                                        <thead>
                                            <tr>
                                                <td class="col-product">
                                                    <strong>Product</strong>
                                                </td>
                                                <td class="col-qty">
                                                    <strong>Quantity</strong>
                                                </td>
                                                <td class="col-price">
                                                    <strong>Subtotal</strong>
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="items" t-as="item">
                                            <tr>
                                                <td class="col-product">
                                                    <img t-att-src="item.attributes.get('image_url')" alt=""/>
                                                    <span><t t-esc="item.attributes.get('name')" /></span>
                                                </td>
                                                <td class="col-qty">
                                                    <span><t t-esc="item.attributes.get('quantity')" /></span>
                                                </td>
                                                <td class="col-price">
                                                    <span><t t-esc="order.attributes.get('currency')" /><t t-esc="item.attributes.get('price', 0)" /></span>
                                                </td>
                                            </tr>
                                            </t>
                                        </tbody>
                                        <tfoot>
                                            <tr class="row-subtotal">
                                                <td></td>
                                                <td>
                                                    <span>Subtotal</span>
                                                </td>
                                                <td class="col-price">
                                                    <span><t t-esc="order.attributes.get('currency')" /><t t-esc="order.attributes.get('subtotal_price', 0)" /></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td>
                                                    <span>Discount</span>
                                                </td>
                                                <td class="col-price">
                                                    <span><t t-esc="order.attributes.get('currency')" /><t t-esc="order.attributes.get('total_discounts', 0) " /></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td>
                                                    <span>Shipping</span>
                                                </td>
                                                <td class="col-price">
                                                    <span><t t-esc="order.attributes.get('currency')" />
                                                        <t t-esc="order.attributes.get('total_shipping_price_set').attributes.get('shop_money').attributes.get('amount', 0)" /></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td>
                                                    <span>Taxes</span>
                                                </td>
                                                <td class="col-price">
                                                    <span><t t-esc="order.attributes.get('currency')" /><t t-esc="order.attributes.get('total_tax', 0)" /></span>
                                                </td>
                                            </tr>
                                            <tr class="row-total">
                                                <td></td>
                                                <td class="col-total">
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="col-price">
                                                    <strong><t t-esc="order.attributes.get('currency')" /><t t-esc="order.attributes.get('total_price', 0)" /></strong>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot class="mgn-email_footer">
                            <tr class="row-title">
                                <td>
                                    <strong>Customer information</strong>
                                </td>
                            </tr>
                            <tr class="row-content">
                                <td>
                                    <table>
                                        <tr>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td class="title">
                                                            <strong>
                                                                Shipping address
                                                            </strong>
                                                        </td>
                                                    </tr>
                                                     <t t-if="order.attributes.get('shipping_address')">
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('shipping_address').attributes.get('name')" /></td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <t t-esc="order.attributes.get('shipping_address').attributes.get('address1')" />,
                                                            <t t-esc="order.attributes.get('shipping_address').attributes.get('province')" />,
                                                            <t t-esc="order.attributes.get('shipping_address').attributes.get('city')" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('shipping_address').attributes.get('zip')" /></td>
                                                    </tr>
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('shipping_address').attributes.get('country_code')" /></td>
                                                    </tr>
                                                     </t>
                                                </table>
                                            </td>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td class="title">
                                                            <strong>Billing address</strong>
                                                        </td>
                                                    </tr>
                                                     <t t-if="order.attributes.get('billing_address')">
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('billing_address').attributes.get('name')" /></td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <t t-esc="order.attributes.get('billing_address').attributes.get('address1')" />,
                                                            <t t-esc="order.attributes.get('billing_address').attributes.get('province')" />,
                                                            <t t-esc="order.attributes.get('billing_address').attributes.get('city')" />
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('billing_address').attributes.get('zip')" /></td>
                                                    </tr>
                                                    <tr>
                                                        <td><t t-esc="order.attributes.get('billing_address').attributes.get('country_code')" /></td>
                                                    </tr>
                                                     </t>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td class="title">
                                                            <strong>Shipping method</strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <t t-if="order.attributes.get('shipping_lines')">
                                                            <td><t t-esc="order.attributes.get('shipping_lines')[0].attributes.get('title')" /></td>
                                                        </t>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <td class="title">
                                                            <strong>Payment method</strong>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <t t-if="order.attributes.get('payment_details')">
                                                            <td>
                                                                <t t-esc="order.attributes.get('payment_details').attributes.get('credit_card_company')"/>
                                                            </td>
                                                        </t>
                                                        <t t-elif="order.attributes.get('gateway')">
                                                            <td>
                                                                <t t-esc="order.attributes.get('gateway')"/>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </body>

            </html>
        </template>
    </data>
</odoo>