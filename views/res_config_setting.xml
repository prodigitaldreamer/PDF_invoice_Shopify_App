<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_pdf_form_shopify" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.shopify.pdf</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="55"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="Shopify PDF"
                     data-key="shopify_order_printer"
                     groups="base.group_system">
                    <h2>Shopify</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="shopify_app">

                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Shopify App</span>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="shopify_app_name" class="col-lg-3 o_light_label"/>
                                        <field name="shopify_app_name"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="shopify_api_version" class="col-lg-3 o_light_label"/>
                                        <field name="shopify_api_version"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="shopify_api_key" class="col-lg-3 o_light_label"/>
                                        <field name="shopify_api_key"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="shopify_api_secret" class="col-lg-3 o_light_label"/>
                                        <field name="shopify_api_secret"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="shopify_env" class="col-lg-3 o_light_label"/>
                                        <field name="shopify_env"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
