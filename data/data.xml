        <record id="ir_cron_shopify_pdf_update_script" model="ir.cron">
            <field name="name">### Shopify PDf - Update Script</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_shopify_pdf_shop"/>
            <field name="state">code</field>
            <field name="code">model.schedule_change_script()</field>
        </record>

        <record id="ir_cron_shopify_pdf_sent_email_mkt" model="ir.cron">
            <field name="name">### Shopify PDf - Sent Email MKT</field>
            <field name="active" eval="False" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_shopify_pdf_shop_request"/>
            <field name="state">code</field>
            <field name="code">model.schedule_sent_email_for_mkt()</field>
        </record>

        <record id="shopify_pdf_plan_free" model="shopify.pdf.plan">
            <field name="name">Free</field>
            <field name="price">0.0</field>
            <field name="automation_email" eval="True"/>
            <field name="automation_email_limits">-1</field>
            <field name="automation_email_with_tags" eval="True"/>
            <field name="custom_invoice_number" eval="True"/>
            <field name="more_paper_size" eval="True"/>
            <field name="live_support"  eval="True"/>
            <field name="more_product_info"  eval="True"/>
            <field name="limit_bulk_print">-1</field>
            <field name="limit_pdf_view">-1</field>
        </record>
        <record id="shopify_pdf_plan_basic" model="shopify.pdf.plan">
            <field name="name">Basic</field>
            <field name="price">8.99</field>
            <field name="automation_email" eval="True"/>
            <field name="automation_email_limits">500</field>
            <field name="automation_email_with_tags" eval="False"/>
            <field name="custom_invoice_number" eval="True"/>
            <field name="more_paper_size" eval="True"/>
            <field name="live_support"  eval="True"/>
            <field name="more_product_info"  eval="True"/>
            <field name="limit_bulk_print">20</field>
            <field name="limit_pdf_view">-1</field>
        </record>
        <record id="shopify_pdf_plan_advanced" model="shopify.pdf.plan">
            <field name="name">Advanced</field>
            <field name="price">19.99</field>
            <field name="automation_email" eval="True"/>
            <field name="automation_email_limits">-1</field>
            <field name="automation_email_with_tags" eval="True"/>
            <field name="custom_invoice_number" eval="True"/>
            <field name="more_paper_size" eval="True"/>
            <field name="live_support"  eval="True"/>
            <field name="more_product_info"  eval="True"/>
             <field name="limit_bulk_print">-1</field>
            <field name="limit_pdf_view">-1</field>
